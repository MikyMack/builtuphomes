											<div class="carousel-inner">
												${project.images.map((image, index) => `
													<div class="carousel-item ${index === 0 ? 'active' : ''}">
														<img src="${image}" class="d-block w-100" alt="${project.title}" 
															style="height: 400px; object-fit: cover; cursor: pointer"
															onclick='openFullscreen("${image}", ${JSON.stringify(project.images).replace(/'/g, "&apos;")}, ${index})'>
													</div>
												`).join('')}
											</div>
										
										</div>
									</div>
									<div class="con">
										<h6><p>${project.title}</p></h6>
										<a>${project.description}</a>
										<p class="price">â¹${project.price}</p>
										<div class="line"></div>
									</div>
								</div>
							</div>
						`;
						container.innerHTML += projectHtml;
					}
				});

				projects.forEach(project => {
					if (project.listed && project.images.length > 1) {
						new bootstrap.Carousel(document.getElementById(`carousel-${project._id}`), {
							interval: 3000,
							wrap: true
						});
					}
				});
			})
			.catch(error => console.error('Error fetching projects:', error));

		function openFullscreen(currentImage, images, startIndex) {
			const overlay = document.createElement('div');
			overlay.style.cssText = `
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0,0,0,0.9);
				display: flex;
				justify-content: center;
				align-items: center;
				z-index: 9999;
			`;

			let currentIndex = startIndex;

			const content = `
				<div style="position: relative; max-width: 90%; max-height: 90%;">
					<img src="${currentImage}" style="max-width: 100%; max-height: 90vh; object-fit: contain;">
					${images.length > 1 ? `
						<button onclick="changeImage(-1)" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,0.3); border: none; padding: 10px; cursor: pointer; color: white;">â®</button>
						<button onclick="changeImage(1)" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,0.3); border: none; padding: 10px; cursor: pointer; color: white;">â¯</button>
					` : ''}
					<button onclick="closeFullscreen()" style="position: absolute; right: 10px; top: 10px; background: rgba(255,255,255,0.3); border: none; padding: 10px; cursor: pointer; color: white;">â</button>
				</div>
			`;

			overlay.innerHTML = content;
			document.body.appendChild(overlay);
			document.body.style.overflow = 'hidden';

			window.fullscreenState = {
				currentIndex,
				images,
				overlay
			};

			overlay.addEventListener('click', function(e) {
				if (e.target === overlay) {
					closeFullscreen();
				}
			});
		}

		// Global functions for fullscreen controls
		window.closeFullscreen = function() {
			if (window.fullscreenState) {
				document.body.removeChild(window.fullscreenState.overlay);
				document.body.style.overflow = 'auto';
				window.fullscreenState = null;
			}
		};

		window.changeImage = function(direction) {
			if (window.fullscreenState) {
				const { currentIndex, images, overlay } = window.fullscreenState;
				const newIndex = (currentIndex + direction + images.length) % images.length;
				const imgElement = overlay.querySelector('img');
				imgElement.src = images[newIndex];
				window.fullscreenState.currentIndex = newIndex;
			}
		};
	</script>
