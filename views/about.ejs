	<script>
		document.addEventListener('DOMContentLoaded', function () {
			if (typeof jQuery != 'undefined') {
				$('#testimonials-carousel').owlCarousel({
					loop: true,
					margin: 30,
					mouseDrag: true,
					autoplay: true,
					dots: false,
					nav: false,
					navText: ['<i class="ti-angle-left" aria-hidden="true"></i>', '<i class="ti-angle-right" aria-hidden="true"></i>'],
					responsiveClass: true,
					responsive: {
						0: {
							items: 1,
						},
						600: {
							items: 2,
						},
						1000: {
							items: 2,
						}
					}
				});

				fetch('/api/testimonials')
					.then(response => response.json())
					.then(testimonials => {
						const carousel = $('#testimonials-carousel');
						carousel.trigger('destroy.owl.carousel');
						testimonials.filter(testimonial => testimonial.listed).forEach(testimonial => {
							carousel.append(`
                        <div class="item">
                            <div class="author-img text-center">
                                <img src="${testimonial.profilePicture || 'img/team/default.jpg'}" alt="${testimonial.name}" style="border-radius: 50%; width: 50px; height: 50px; object-fit: cover; margin: 0 auto;">
                            </div>
                            <div class="cont text-center" style="margin-top: 15px;">
                                <h6>${testimonial.name}</h6>
                            </div>
                            <p class="text-center" style="margin-top: 10px;">"${testimonial.description}"</p>
                        </div>
                    `);
						});

						carousel.owlCarousel({
							loop: true,
							margin: 30,
							mouseDrag: true,
							autoplay: true,
							dots: true,
							nav: false,
							navText: ['<i class="ti-angle-left" aria-hidden="true"></i>', '<i class="ti-angle-right" aria-hidden="true"></i>'],
							responsiveClass: true,
							responsive: {
								0: {
									items: 1,
								},
								600: {
									items: 2,
								},
								1000: {
									items: 2,
								}
							}
						});
					})
					.catch(error => console.error('Error fetching testimonials:', error));
			}
		});
